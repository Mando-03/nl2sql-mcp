# nl2sql-mcp Environment Configuration
# Copy this file to .env and customize the values for your environment

# Database connection URL (REQUIRED)
# Examples:
#   SQLite: sqlite:///./nl2sql.db
#   PostgreSQL: postgresql://user:password@localhost:5432/database
#   SQL Server: mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+18+for+SQL+Server
NL2SQL_MCP_DATABASE_URL=sqlite:///./nl2sql.db

# Disable parallelism in tokenenizer
TOKENIZERS_PARALLELISM=false

# Optional: Override the embedding model (Model2Vec checkpoint)
# Default: minishlab/potion-base-8M (public, compact)
# Alternatives:
#   minishlab/potion-retrieval-32M  # larger, retrieval-tuned
#   minishlab/potion-base-8M        # default
NL2SQL_MCP_EMBEDDING_MODEL=minishlab/potion-base-8M
