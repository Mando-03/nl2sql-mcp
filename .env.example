# nl2sql-mcp Environment Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Database connection URL (REQUIRED)
# Examples:
#   SQLite: sqlite:///./nl2sql.db
#   PostgreSQL: postgresql://user:password@localhost:5432/database
#   SQL Server: mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+18+for+SQL+Server
NL2SQL_MCP_DATABASE_URL=sqlite:///./nl2sql.db

# LLM Configuration (REQUIRED)
# Provider name and model id for PydanticAI (e.g., openai:gpt-4o-mini)
# Set provider and model; other Azure/OpenAI specific variables should be
# configured per your PydanticAI provider driver.
NL2SQL_MCP_LLM_PROVIDER=openai
NL2SQL_MCP_LLM_MODEL=gpt-4o-mini

# Azure OpenAI (only when provider is azure-openai)
# Use the driver-standard environment variables directly; deployment defaults to model name
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
OPENAI_API_VERSION=2025-01-01-preview

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Optional LLM parameters (sane defaults)
NL2SQL_MCP_LLM_TEMPERATURE=0.2
NL2SQL_MCP_LLM_TOP_P=1.0
NL2SQL_MCP_LLM_TOP_K=50
NL2SQL_MCP_LLM_MAX_OUTPUT_TOKENS=800

# Result budget limits (to avoid overloading the LLM)
NL2SQL_MCP_ROW_LIMIT=200
NL2SQL_MCP_MAX_CELL_CHARS=200
NL2SQL_MCP_MAX_RESULT_BYTES=200000

# Logging level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
NL2SQL_MCP_LOG_LEVEL=INFO

# Disable parallelism in tokenenizer
TOKENIZERS_PARALLELISM=false
